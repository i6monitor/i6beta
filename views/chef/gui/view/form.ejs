<div class="card mb-0">
  <div class="card-header">
    <div class=" pull-right" role="group" aria-label="Button group">
      <a class="btn btn-warning mt-0" data-action="cancel_edit" href="javascript:void(0)">
        <i class="icon-close "></i> &nbsp;Cancel</a>
      <a class="btn btn-success mt-0" data-action="reset_edit" href="javascript:void(0)">
        <i class="icon-refresh"></i> &nbsp;Reset</a>
      <a class="btn btn-primary mt-0" data-action="create" href="javascript:void(0)">
        <i class="fa fa-save"></i> &nbsp;Save</a>
    </div>
  </div>

  <div class="card-body">
    <form>
      <div class="form-group row">
        <div class="col-md-3">
          <label>Title</label>
          <input type="text" data-name="title" value="<%= model.title %>" class="form-control" placeholder="Enter view title..">
        </div>
        <div class="col-md-3">
          <label>Icon</label>
          <input type="text" data-name="icon" value="<%= model.icon %>" class="form-control" placeholder="Font awesome icon.">
          <span class="help-block text-secondary">Example :
            <i>desktop</i> for
            <i>fa-desktop</i>.</span>
        </div>
        <div class="col-md-3">
          <label>Security Level</label>
          <input type="number" data-name="security" value="<%= model.security %>" class="form-control" placeholder="Enter security level..">
        </div>
      </div>


      <div class="form-group row">
        <div class="col-12">
          <textarea data-name="code" value="<%= model.code %>" id="summernote" style="width:100%;"></textarea>
        </div>
      </div>

    </form>

  </div>
</div>
